<p>Find below all the Active Alerts older than <%= @days %> days </p>

<table fixed-header class="table table-striped" style="width: 100%; height: 200px;">
  <thead>
    <tr>
      <th class="text-right">
        <div>Alert </div>
        <div>Triggered At </div>
      </th>
    </tr>
  </thead>
  <tbody>

    <% @notifications.each do |notif| %>
    <tr>
      <td><%= notif.notifier.name %> ( <%= notif.notifier.pretty_configuration %> )</td>
      <td><%= notif.created_at.to_time.strftime('%B %e at %l:%M %p')  %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p>This is an automatically generated email.</p>
