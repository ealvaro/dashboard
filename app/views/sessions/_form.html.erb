<%= form_tag sessions_path do %>
<div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email], class: 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, class: 'form-control'%>
</div>
<div class="actions"><%= submit_tag "Sign in", class: 'btn btn-block btn-primary btn-lg'%></div>
<table width="100%"><tr>
  <td class="text-left"><%= link_to "Forgot your password?", new_password_reset_path %></td>
  <td class="text-right"><%= render partial: 'defects/defect_link', locals: { title: "Report a bug", link_class: "" } %></td>
</tr></table>

<% end %>
