<%= render partial: 'billing_dashboard/navbar' %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-right">
      <div class="btn-group">
        <%= link_to( RunRecord.model_name.human.pluralize, billing_tool_run_records_path( @tool ), class: "btn btn-primary") unless @tool.run_records.blank? %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <dl class="dl-horizontal">
        <dt><%= Tool.human_attribute_name :serial_number %></dt>
        <dd><%= @tool.serial_number %></dd>
        <dt><%= Tool.human_attribute_name :tool_type %></dt>
        <dd><%= @tool.tool_type.name %></dd>
        <dt><%= Tool.human_attribute_name :tool_type_description %></dt>
        <dd><%= @tool.tool_type.description %></dd>
      </dl>
    </div>
  </div>
</div>
