<%= form_tag sessions_path do %>
<div class="form-group">
  <%= label_tag :email %>
  <%= text_field_tag :email, params[:email], class: 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, class: 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag :job_number %>
  <%= text_field_tag :job_number, params[:job_number], class: 'form-control'%>
</div>
<div class="form-group">
  <%= label_tag :run_number %>
  <%= text_field_tag :run_number, params[:run_number], class: 'form-control'%>
</div>
<div class="actions"><%= submit_tag "Sign in", class: 'btn btn-block btn-primary btn-lg'%></div>
<%= link_to "Forgot your password?", new_password_reset_path %>

<% end %>
