<h3>Report Requests</h3>
<table class="table grey-white">
  <tr>
    <th>Job</th>
    <th>Requested By</th>
    <th>Requested At</th>
    <th>Status</th>
    <th>Detail</th>
  </tr>
  <% report_requests.each do |rr| %>
    <tr>
      <td><% if rr && rr.job %><%= link_to rr.job.name, rr.job, target: '_blank' %><% end %></td>
      <td><%= rr.requested_by.try(:email) %></td>
      <td><%= timeago_tag rr.created_at, nojs: true, limit: 10.days.ago %></td>
      <td><%= rr.status %></td>
      <td>
        <%= link_to rr, target: '_blank' do %>
          <button class="btn btn-default"><i class="zmdi zmdi-assignment"></i></button>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate report_requests, remote: true %>
